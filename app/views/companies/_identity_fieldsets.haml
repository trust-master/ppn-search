= fieldset :identity do
  %ul
    = form.input :name
    = form.input :in_business_since, start_year: 1950, end_year: 2012, discard_day: true, discard_month: true, prompt: true

= fieldset :contact do
  %ul
    = form.input :email
    = form.input :phone_main
    = form.input :phone_mobile
    = form.input :phone_fax

= fieldset :website do
  %ul
    = form.input :website_url

= fieldset :locations do
  = render 'locations', form: form

= fieldset :admin do
  = render 'admin', form: form
