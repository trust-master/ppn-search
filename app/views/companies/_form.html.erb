        </select>
      </li>
      <li>
        <label for="company_personal_license_number">License Number</label>
        <input type="text" name="company[personal_license_number]" id="company_personal_license_number" value="<%=company.personal_license_number%>">
      </li>
    </ul>
    <ul class="personal_license">
