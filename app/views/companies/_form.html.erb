<div class="target_tab company_form_step_1">
  <form class="company_form_step_1_form">
    <h2>Basic Info</h2>
    <ul>
      <li>
        <label for="company_name">Name*</label>
        <input type="text" name="company[name]" id="company_name" value="<%= company.name%>"/>
      </li>
      <li>
        <label for="company_in_business_since">In Business Since</label>
        <input type="text" name="company[in_business_since]" id="company_in_business_since" value="<%= company.in_business_since%>"/>
      </li>
      <li>
        <label for="company_email">Company Email*</label>
        <input type="text" name="company[email_address]" id="company_email_address" value="<%= company.email_address%>"/>
      </li>
      <li>
        <label for="company_main_phone_number">Main Phone Number*</label>
        <input type="text" name="company[main_phone_number]" id="company_main_phone_number" value="<%= company.main_phone_number%>"/>
      </li>
      <li>
        <label for="company_mobile_phone_number">Mobile Phone Number</label>
        <input type="text" name="company[mobile_phone_number]" id="company_mobile_phone_number" value="<%= company.mobile_phone_number%>"/>
      </li>
      <li>
        <label for="company_fax_number">Fax Number</label>
        <input type="text" name="company[fax_number]" id="company_fax_number" value="<%= company.fax_number%>"/>
      </li>
      <li>
        <label for="company_web_site">Web Site</label>
        <input type="text" name="company[web_site]" id="company_web_site" value="<%= company.web_site%>"/>
      </li>
      <li>
        <label for="company_address_1">Address 1*</label>
        <input type="text" name="company[address_1]" id="company_address_1" value="<%= company.address_1%>"/>
      </li>
      <li>
        <label for="company_address_2">Address 2</label>
        <input type="text" name="company[address_2]" id="company_address_2" value="<%= company.address_2%>"/>
      </li>
      <li>
        <label for="company_city">City*</label>
        <input type="text" name="company[city]" id="company_city" value="<%= company.city%>"/>

      </li>
      <li>
        <label for="company_state">State*</label>
        <input type="text" name="company[state]" id="company_state" value="<%= company.state%>"/>
      </li>
      <li>
        <label for="company_zip">Zip Code*</label>
        <input type="text" name="company[zip_code]" id="company_zip_code" value="<%= company.zip_code%>"/>
      </li>
      <li>
        <input type="submit"/>
      </li>
    </ul>
  </form>
</div>
<div class="target_tab company_form_step_2 hidden">
  <form class="company_form_step_2_form">
    <h2>Business Description</h2>
    <ul>
      <li>
        <label for="company_about">About</label>
        <textarea name="company[about]" id="company_about"><%= company.about%></textarea>
      </li>
      <li>
        <label for="company_description">Description</label>
        <textarea name="company[description]" id="company_description"><%= company.description%></textarea>
      </li>
      <li>
        <label for="company_general_info">General Info</label>
        <textarea name="company[general_info]" id="company_general_info"><%= company.general_info%></textarea>
      </li>
    </ul>
    <h2>Service Coverage</h2>
    <ul>
      <% i = 0 %>
      <% @service_areas.each do |service_area|%>
        <%
          service_area_coverage = company.service_area_coverages.find_all{|item| item.service_area_id == service_area.id}.first()
          raise "Could not locate service_area_coverage for #{service_area.name} (#{service_area.id})" if service_area_coverage.nil?
        %>
        <li>
          <input type="hidden" name="service_area_coverages[][service_area_id]" value="<%= service_area.id%>"/>
          <label for=""><%= service_area.name%></label>
          <select name="service_area_coverages[][coverage_type]">
            <option value="0" <%= service_area_coverage.coverage_type==0 ? "selected=selected" : ""%>>None</option>
            <option value="1" <%= service_area_coverage.coverage_type==1 ? "selected=selected" : ""%>>Partial</option>
            <option value="2" <%= service_area_coverage.coverage_type==2 ? "selected=selected" : ""%>>All</option>
          </select>
        </li>
        <% i += 1 %>
      <% end %>
    </ul>
    <h2>Service Category</h2>
    <ul>
      <li>
        <label for="company_company_category">Select a Category</label>
        <select name="company[company_category_id]" id="company_company_category_id">
          <option value="-1">Select a Category</option>
          <% @company_categories.each do |company_category| %>
            <option value="<%= company_category.id %>"
              <%= !company.company_category.nil? && company.company_category.id == company_category.id ? "selected=selected" : ""%>
            ><%= company_category.name%></option>
          <% end %>
        </select>
      </li>
      <li class="company_category_new_toggle">
        <a href="#" class="add_category">Add a Category</a>
      </li>
      <li class="company_category_new hidden">
        <label for="company_category_name">Category Name*</label>
        <input type="text" name="company_category[name]" id="company_category_name"/>
        <br/>
        <a href="#" class="cancel_add_category">Cancel</a>
        <input type="submit" value="Add Category"/>
      </li>
      <li>
        <label for="company_twenty_four_hour_service">24 Hour Service</label>
        <input type="checkbox" name="company[twenty_four_hour_service]" <%= @company.twenty_four_hour_service ? "checked=checked" : ""%> value="1">
      </li>
      <li>
        <label for="company_emergency_services">Emergency Services</label>
        <input type="checkbox" name="company[emergency_services]" <%= @company.emergency_services ? "checked=checked" : ""%> value="1">
      </li>
    </ul>
    <ul>
      <li>
        <input type="submit"/>
      </li>
    </ul>
  </form>
</div>
<div class="target_tab company_form_step_3 hidden">
  <form class="company_form_step_3_form" enctype="multipart/form-data">
