!!!
%html
  %head
    %title= ['Trust Master', yield(:title)].flatten.compact.join(': ')

    = stylesheet_link_tag :application
    /[if IE 8]
      = stylesheet_link_tag :ie8
    /[if lte IE 7]
      = stylesheet_link_tag :ie7
    = javascript_include_tag :application

  %body

    .wrapper-outer
      #wrapper
        #header
          %h1
            = link_to root_url do
              = image_tag asset_path('logo.png'), alt: "Trust Master: #{t('tagline')}"
          - if current_user
            .header-nav
              %span.welcome Welcome #{current_user.display_name}
              %ul.account-links
                %li.nav-profile
                  .divider
                  = link_to 'Profile', edit_user_path
                  %ul.dropdown
                    %li= link_to 'View Profile', user_path
                    %li= link_to 'Edit Profile', edit_user_path
                %li.nav-account
                  .divider
                  = link_to 'Account', ''
                  %ul.dropdown
                    %li= link_to 'Basic Info'
                    %li= link_to 'Privacy Settings'
                    %li= link_to 'Notifications & Alerts'
                %li.nav-logout
                  = link_to t('session.destroy.action'), logout_path
              .clear
            .search
              = form_tag companies_path do
                %fieldset
                  %input{type: :text}
                  %input{type: :submit}

          .main-nav
            %ul
              - if current_user
                %li.active= link_to_unless_current "Search PPN", companies_path
                %li= link_to_unless_current "ADMIN", '/admin'
              - else
                %li.active= link_to_unless_current 'Login', login_path

        #content{ class: yield(:content_div_class) }

          %h2= yield(:title).presence || [controller.controller_name.titleize, controller.action_name].join('#')

          - flash.each do |bucket, messages|
            - Array.wrap(messages).each do |msg|
              .flash{ class: bucket }= msg

          = yield

      #footer
        .footer-links
          %ul
            %li
              = link_to 'Terms & Conditions', '/terms'
              |&nbsp;
            %li
              = link_to 'Privacy Policy', '/privacy-policy'
              |&nbsp;
            %li
              = link_to 'About Us', '/about'
              |&nbsp;
            %li
              = link_to 'Contact Us', '/contact'

        .trust-logos= image_tag asset_path('trust-logos.png'), alt: 'Verisign'

        .social-media
          %h5 Follow Us On
          %ul
            %li
              = link_to '/follow/twitter' do
                = image_tag asset_path('twitter.png'), alt: 'Twitter'
            %li
              = link_to '/follow/facebook' do
                = image_tag asset_path('facebook.png'), alt: 'Facebook'
        .clear

      .copyright &copy; 2012 Trust Master, LLC. All Rights Reserved.

  #development
    %h2 Development Stuff
    = render partial: 'disqus', locals: { identifier: view_identifier }
    - unless Rails.env.production?
      = whereuat # the helper to load the Whereuat plugin to aid PivotalTracker story management