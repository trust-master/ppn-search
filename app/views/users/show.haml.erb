%a{:href => "/users/"} Return to Index
%h2
  Showing #{@user.email}
.user_show_container
  %ul
    %li
      %label Email Address
      %span= @user.email
    %li
      %label First Name
      %span= @user.first_name
    %li
      %label Last Name
      %span= @user.last_name
    %li
      %label User Type
      %span= @user.is_admin ? "Administrator" : "User"
    %li
      %label Password Hash
      %span= @user.password_hash
    %li
      %label Created By
      %span= @user.created_by
    %li
      %label Created At
      %span= @user.created_at
    %li
      %label Updated By
      %span= @user.updated_by
    %li
      %label Updated At
      %span= @user.updated_at
