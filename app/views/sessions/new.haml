- title t('.title')
- content_for :content_div_class, 'col-1'

#col
  = simple_form_for @session, url: session_path, wrapper: :login do |f|
    %fieldset
      %ul
        = f.input :email, input_html: { autofocus: true }, placeholder: false
        = f.input :password
      .login-btns
        = f.button :submit, id: 'submit'
        = link_to t('.cant_log_in'), new_password_reset_path
      .login-messages
        %p
          %strong= t('.did_you_forget')
        = link_to t('.recover'), new_password_reset_path
        %p
          = t('.why')

%ol#login-instructions
  %li.box
    = t('.instructions.test.title')
    .body= t('.instructions.test.body')
  %li.box
    = t('.instructions.refine.title')
    .body= t('.instructions.refine.body')
  %li.box
    = t('.instructions.impact.title')
    .body= t('.instructions.impact.body')