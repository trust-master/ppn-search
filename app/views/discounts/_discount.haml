%h5= link_to discount.display_identifier, "##{tab_id_for(discount, :data)}"

%div[discount]
  - if discount.image?
    .image
      %h4= Discount.human_attribute_name :image
      = link_to discount.image.preview.url do
        = image_tag discount.image.thumb.url
      = include_download_link :image, discount.image.url

  - if discount.description?
    .description
      = discount.description

  - if discount.start_date?
    .start_date
      %label= Discount.human_attribute_name(:start_date)
      = discount.start_date

  - if discount.end_date?
    .end_date
      %label= Discount.human_attribute_name(:end_date)
      = discount.end_date

  - if discount.market_id?
    .market
      %label= Discount.human_attribute_name(:market)
      = discount.market.name

